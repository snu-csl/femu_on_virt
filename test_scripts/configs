
TOTAL_ZONES=16
TOTAL_GB=32
BLOCK_SIZE=128

TOTAL_LBAS=0
NR_LBAS_IN_ZONE=0

((TOTAL_LBAS = (TOTAL_GB * 1024 - 1) * 1024 * 1024 / 512))
((NR_LBAS_IN_ZONE = TOTAL_LBAS / TOTAL_ZONES))


DEVICE="/dev/$1"
PARAM1=$2
PARAM2=$3
NVMECLI="sudo nvme"
NVMECLI_ZNS="$NVMECLI zns"

ZNS_REPORT_ZONE="$NVMECLI_ZNS report-zones $DEVICE"
ZNS_CLOSE_ZONE="$NVMECLI_ZNS close-zone $DEVICE"
ZNS_OPEN_ZONE="$NVMECLI_ZNS open-zone $DEVICE"
ZNS_FINISH_ZONE="$NVMECLI_ZNS finish-zone $DEVICE"
ZNS_RESET_ZONE="$NVMECLI_ZNS reset-zone $DEVICE"
ZNS_OFFLINE_ZONE="$NVMECLI_ZNS offline-zone $DEVICE"

NVME_WRITE="$NVMECLI write $DEVICE"

